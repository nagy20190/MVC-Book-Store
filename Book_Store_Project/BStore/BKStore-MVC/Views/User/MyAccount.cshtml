@model BKStore_MVC.ViewModel.AccountUser

@{
    ViewData["Title"] = "MyAccount";
}

<h1>MyAccount</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="\assets\img\@Model.ImagePath" alt="User Image" style="max-width: 250px; max-height: 250px; float: right; margin-left: 0px; margin-top: -70px;" />
                <br />
                <form asp-action="UploadImage" method="post" enctype="multipart/form-data" style="float: right; margin-right: -120px; margin-top: 170px;">
                    <input type="file" name="ImageFile" onchange="this.form.submit()" style="display:none;" id="uploadImageInput" />
                    <a href="#" onclick="document.getElementById('uploadImageInput').click(); return false;">Upload Image</a>
                </form>
            }
            else
            {
                <p>No image available</p>
                <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                    <input type="file" name="ImageFile" onchange="this.form.submit()" style="display:none;" id="uploadImageInput" />
                    <a href="#" onclick="document.getElementById('uploadImageInput').click(); return false;">Upload Image</a>
                </form>
            }
        </dd>
    </dl>
</div>
